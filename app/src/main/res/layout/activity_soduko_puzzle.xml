<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dragdrop"
    tools:context="com.example.mondelavictoria.happy_kids_reading.Drag_Drop_Game"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linear1"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/target1"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="100dp"
            android:padding="5dp">

            <ImageView
                android:tag=" "
                android:src="@drawable/buttonsquare"
                android:background="@drawable/button_transparent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/test1"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/target2"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginRight="95dp"
            android:padding="5dp">

            <ImageView
                android:tag=" "
                android:src="@drawable/buttonsquare"
                android:background="@drawable/button_transparent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/test2"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/target3"
            android:orientation="vertical"
            android:layout_weight="1"

            android:padding="5dp">

            <ImageView
                android:tag=" "
                android:src="@drawable/buttonsquare"
                android:background="@drawable/button_transparent"
                android:textSize="20dp"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/test3"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/target4"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:tag=" "
                android:src="@drawable/buttonsquare"
                android:background="@drawable/button_transparent"
                android:textSize="20dp"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/test4"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/target5"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:tag=" "
                android:src="@drawable/buttonsquare"
                android:background="@drawable/button_transparent"
                android:textSize="20dp"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/test5"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/target6"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="5dp">

            <ImageView
                android:tag=" "
                android:src="@drawable/buttonsquare"
                android:background="@drawable/button_transparent"
                android:textSize="20dp"

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/test6"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear2"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/target7"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="100dp"
            android:padding="5dp">

            <ImageView
                android:tag=" "
                android:src="@drawable/buttonsquare"
                android:background="@drawable/button_transparent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/test7"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/target8"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginRight="95dp"
            android:padding="5dp">

            <ImageView
                android:tag=" "
                android:src="@drawable/buttonsquare"
                android:background="@drawable/button_transparent"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/test8"/>

        </LinearLayout>







    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnTarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_transparent"
        android:orientation="horizontal">


        <Button

            android:id="@+id/btn1"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_weight="1"
            android:background="@drawable/rats" />

        <Button
            android:onClick="buttonClicked"
            android:id="@+id/btn2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/cat" />

        <Button

            android:id="@+id/btn3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/dog"
            />

        <Button
            android:layout_weight="1"
            android:id="@+id/btn4"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:background="@drawable/hyena" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/btnTarget1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_transparent"
        android:orientation="horizontal">


        <Button

            android:id="@+id/btn5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/lions" />

        <Button
            android:onClick="buttonClicked"
            android:id="@+id/btn6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/elephants" />

        <Button

            android:id="@+id/btn7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/dragon"
            />

        <Button
            android:layout_weight="1"
            android:id="@+id/btn8"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:background="@drawable/pudge" />
    </LinearLayout>
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/check"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:background="@drawable/button_transparent"
        android:text="CHECK"/>

</LinearLayout>

