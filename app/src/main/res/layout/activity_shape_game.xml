<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bggg"
    tools:context="com.example.mondelavictoria.happy_kids_reading.ShapeGame">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/countLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <ImageView
        android:id="@+id/questionImage"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/image_circle"
        android:layout_marginTop="10dp"/>

    <Button
        android:background="@drawable/btn"
        android:id="@+id/answerBtn1"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:onClick="checkAnswer"/>

    <Button
        android:background="@drawable/btn"
        android:id="@+id/answerBtn2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="6dp"
        android:onClick="checkAnswer"/>
    <Button
        android:background="@drawable/btn"
        android:id="@+id/answerBtn3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="6dp"
        android:onClick="checkAnswer"/>
    <Button
        android:background="@drawable/btn"
        android:id="@+id/answerBtn4"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="6dp"
        android:onClick="checkAnswer"/>

</LinearLayout>
