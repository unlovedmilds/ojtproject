<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dragdrop"
    tools:context="com.example.mondelavictoria.happy_kids_reading.Drag_Drop_Game"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
      >

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/target1"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="5dp">

        <Button
            android:text="One"
            android:textSize="20dp"
            android:background="@drawable/cloud"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/test1"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/target2"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="5dp">

            <Button
                android:text="Two"
                android:textSize="20dp"
                android:background="@drawable/cloud"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/test2"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/target3"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="5dp">

            <Button
                android:text="Three"
                android:textSize="20dp"
                android:background="@drawable/cloud"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/test3"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/target4"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="5dp">

            <Button
                android:text="Four"
                android:textSize="20dp"
                android:background="@drawable/cloud"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/test4"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnTarget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">


        <Button

            android:id="@+id/btn1"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_weight="1"
            android:background="@drawable/one" />

        <Button
            android:onClick="buttonClicked"
            android:id="@+id/btn2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/two" />

        <Button

            android:id="@+id/btn3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/three"
           />

        <Button
            android:layout_weight="1"
            android:id="@+id/btn4"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:background="@drawable/four" />
    </LinearLayout>


</LinearLayout>

